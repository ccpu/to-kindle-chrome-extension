{
    "manifest_version": 2,
    "name": "ToKindle",
    "description": "This extension allow user to select an elements within the page and send it to a windows app to convert to mobi file.",
    "version": "1.5",
    "browser_action": {
        "default_icon": "img/icon.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "jquery.min.js",
                "main.js"
            ],
            "css": [
                "css/style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "options_page": "options.html"
}